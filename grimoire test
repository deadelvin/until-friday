  <script>
    (function(){
      const grid = document.getElementById('cardGrid');
      const searchInput = document.getElementById('searchInput');
      const elementFilter = document.getElementById('elementFilter');
      const clearBtn = document.getElementById('clearBtn');
      const resetFilters = document.getElementById('resetFilters');
      const addExample = document.getElementById('addExample');

      const modal = document.getElementById('modal');
      const modalTitle = document.getElementById('modalTitle');
      const modalBody = document.getElementById('modalBody');
      const closeModal = document.getElementById('closeModal');

      // helper: get card data for searching/filtering
      function cardData(card){
        return {
          title: card.dataset.title || '',
          tags: (card.dataset.tags || '').split(/\s+/).filter(Boolean),
          text: (card.querySelector('.card-excerpt')?.textContent || '') + ' ' + (card.querySelector('.influences')?.textContent || '')
        };
      }

      // flip handling: toggle by clicking card or flip button
      function bindCard(card){
        const inner = card.querySelector('.card-inner');
        const flipBtn = card.querySelector('.flip-btn');
        const readmore = card.querySelector('.readmore');

        // clicking the whole card toggles flip (but avoid when clicking links or buttons)
        card.addEventListener('click', (ev)=>{
          if (ev.target.closest('a') || ev.target.closest('button') && !ev.target.classList.contains('flip-btn') && !ev.target.classList.contains('readmore')) return;
          inner.classList.toggle('is-flipped');
          ev.currentTarget.classList.toggle('flipped');
        });

        // flip button (explicit)
        if(flipBtn){
          flipBtn.addEventListener('click', (ev)=>{
            ev.stopPropagation();
            inner.classList.toggle('is-flipped');
            card.classList.toggle('flipped');
          });
        }

        // keyboard: Enter or Space flips when focused on card
        card.addEventListener('keydown', (ev)=>{
          if(ev.key === 'Enter' || ev.key === ' '){
            ev.preventDefault();
            inner.classList.toggle('is-flipped');
            card.classList.toggle('flipped');
          }
        });

        // read more opens modal with full back content
        if(readmore){
          readmore.addEventListener('click', (ev)=>{
            ev.stopPropagation();
            const title = card.dataset.title || 'Spell';
            modalTitle.textContent = title;
            modalBody.innerHTML = card.querySelector('.influences').innerHTML;
            modal.classList.add('open');
            modal.setAttribute('aria-hidden','false');
            closeModal.focus();
          });
        }

      }

      // initialize cards
      function initCards(){
        const cards = Array.from(grid.querySelectorAll('.card'));
        cards.forEach(c => bindCard(c));
      }

      // search + filter logic
      function applyFilters(){
        const q = searchInput.value.trim().toLowerCase();
        const element = elementFilter.value;

        const cards = Array.from(grid.querySelectorAll('.card'));

        cards.forEach(card=>{
          const data = cardData(card);
          const matchesSearch = !q || (data.title+' '+data.text).toLowerCase().includes(q);
          const matchesFilter = !element || data.tags.map(t => t.toLowerCase()).includes(element.toLowerCase());
          card.style.display = (matchesSearch && matchesFilter) ? '' : 'none';
        });
      }

      searchInput.addEventListener('input', applyFilters);
      elementFilter.addEventListener('change', applyFilters);
      clearBtn.addEventListener('click', ()=>{
        searchInput.value='';
        elementFilter.value='';
        applyFilters();
      });

      resetFilters.addEventListener('click', ()=>{
        searchInput.value='';
        elementFilter.value='';
        applyFilters();
      });

      // modal close handlers
      closeModal.addEventListener('click', ()=>{
        modal.classList.remove('open');
        modal.setAttribute('aria-hidden','true');
      });
      modal.addEventListener('click', (ev)=>{
        if(ev.target === modal) {
          modal.classList.remove('open');
          modal.setAttribute('aria-hidden','true');
        }
      });
      document.addEventListener('keydown', (ev)=>{
        if(ev.key === 'Escape' && modal.classList.contains('open')){
          modal.classList.remove('open');
          modal.setAttribute('aria-hidden','true');
        }
      });

      // sample add card button (makes it easy to test / illustrate how to add)
      addExample.addEventListener('click', ()=>{
        const template = grid.querySelector('.card').cloneNode(true);
        // update dataset & title so it's unique
        const newTitle = 'New Spell ' + (grid.querySelectorAll('.card').length + 1);
        template.dataset.title = newTitle;
        template.dataset.tags = 'Herbal';
        template.querySelector('.card-title').textContent = newTitle;
        template.querySelector('.card-excerpt').textContent = 'Short description of ' + newTitle;
        template.querySelector('.influences').innerHTML = '<p><strong>Influences:</strong></p><ul><li><a href="#">example reference</a></li></ul><p>Reflective notes for ' + newTitle + '.</p>';
        grid.appendChild(template);
        bindCard(template);
        applyFilters();
      });

      // initial
      initCards();

      // make sure filters apply initially
      applyFilters();

    })();
  </script>
</body>
</html>



